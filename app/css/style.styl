	grid-gap 20px
	grid-template-columns 1fr 1fr 1fr;

.news__el
	br(10px)
	overflow: hidden
	box-shadow: 0 10px 30px 0 rgba(50, 50, 50, 0.08);

.news__el-content
	padding: 30px 30px 50px 30px
	background: white
.news__el-img
	bg-full()
	padding: 35% 10%

.news__el-title
	font-size: 18px
	font-weight: 700
	margin-bottom: 10px
	color black
.news__el-date
	opacity: .8
	margin-bottom: 30px
	font-size: 14px
.news__el-text
	line-height: 1.6

.main-banner-wrap
	width: 40%

.slider-el
	color white
	flex(mid)
	display flex!important
	margin 10px 0

//for custom navigation
