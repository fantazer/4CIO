	bg-full()
	position: relative
	background-size: cover
	background-position: top center
.main-banner-filter
	filter()
	background: #00000021
.main-banner-content
	flex(mid)
	position: absolute
	top 0
	left 0
	width: 100%
	height: 100%
	z-index 2

.main-banner-title
	font-size: 120px
	font-weight: 700
	up()
	font-family:'Gotham'
	color $mark
	line-height: 1
.main-banner-slogan
	font-size: 48px
	font-weight: 700
	font-family:'Gotham'
	up()
	width: 700px
	margin-bottom: 20px
	color black
.main-banner-text
	opacity:.8
	line-height: 1.6
.section
	padding: 100px
.section--gray
	background: #fbfdff
.section-title
	margin-bottom: 20px
	font-size: 38px
	font-weight: 700
	text-align: center
	color black
	font-family: Gotham

.section-title-sub
	text-align: center
	margin-bottom: 60px
.news
