	box-shadow 0 10px 30px 0 rgba(50,50,50,0.08)
	br(10px)
	position: relative
.perfomace__el-img-wrap
	width: 50%
.perfomace__el-img
	bg-full()
	padding: 40% 10%
.perfomace__el-content
	width: 50%
	padding: 30px
	background: white
	f()
	fl()
	justify-content: center
	align-items: flex-start
.perfomace__el-title
	font-size: 32px
	font-weight: bold
	color black
	font-family: 'Gotham'
	line-height: 1.2
	margin-bottom: 30px
.perfomace__el-text
	line-height: 1.6
	margin-bottom: 40px
.perfomace__el-get
	@extend .btn--md
	@extend .btn--mark
	display: inline-block
	width: auto

.partners
	display: grid
	grid-gap 30px
	grid-template-columns repeat(4,1fr);

.partners__el
	flex(mid)
	fl()
	tr(all)
	cp()
